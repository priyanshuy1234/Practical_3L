<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Game Management</title>
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="container">
        <h1>Games List</h1>
        <a href="/game/new" class="btn btn-primary">Add New Game</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Game Name</th>
                    <th>Number of Players</th>
                    <th>Game Duration</th>
                    <th>Platform</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% games.forEach(game => { %>
                    <tr>
                        <td><%= game.gameName %></td>
                        <td><%= game.numberOfPlayer %></td>
                        <td><%= game.gameDuration %></td>
                        <td><%= game.platform %></td>
                        <td>
                            <a href="/games/<%= game._id %>" class="btn btn-info">Show</a>
                            <a href="/games/<%= game._id %>/edit" class="btn btn-warning">Edit</a>
                            <form action="/games/<%= game._id %>/delete" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>